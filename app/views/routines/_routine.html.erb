<div id="<%= dom_id routine %>" class="flex border bg-white shadow-md rounded-lg overflow-hidden mb-4 mx-8">
  <div class="w-1/2 p-4">
    <h2 class="font-bold text-lg">Date: <%= routine.date.strftime('%B %e') %></h2>
    <p class="text-gray-700 text-sm">Notes: <%= routine.notes %></p>
    <p class="text-gray-700 text-sm">Exercises: <%= routine.exercises.count %></p>
  </div>
  <div class="w-1/2 text-right p-4">
    <% if action_name != "show" %>
      <%= link_to "Show this routine", routine, class: "text-teal-500 inline-block hover:text-teal-800" %>
      <%= link_to "Edit this routine", edit_routine_path(routine), class: "ml-2 text-teal-500 inline-block hover:text-teal-800" %>
    <% end %>
  </div>
</div>