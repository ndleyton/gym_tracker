<div class="w-full">
  <%= month_calendar do |date| %>
    <div class="<%= 'bg-green-200' if current_user.routines.exists?(date: date) %> p-4 border border-gray-300">
      <%= link_to date.day, date_lookup_routines_path(date: date), class: "block text-center text-lg" %>
    </div>
  <% end %>
  
  <!-- Notifications -->
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Header and New Routine Link -->
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Routines</h1>
    <%= link_to "New routine", new_routine_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <!-- Routines List -->
  <div id="routines" class="min-w-full">
    <%= render @routines %>
  </div>
</div>
